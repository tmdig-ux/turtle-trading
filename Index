<script>
    let buyData = [];
    let sellData = [];
    let autoScan = false;
    let autoTimer = null;
    
    const STOCKS = ['AAPL', 'MSFT', 'GOOGL', 'AMZN', 'NVDA', 'META', 'TSLA', 'JPM'];
    
    function scanNow() {
        toast('üîç Scansione in corso...');
        
        setTimeout(() => {
            generateSignals();
            updateUI();
            document.getElementById('lastScan').textContent = new Date().toLocaleTimeString('it-IT', {hour: '2-digit', minute: '2-digit'});
            toast('‚úÖ Scansione completata!');
        }, 1000);
    }
    
    function generateSignals() {
        buyData = STOCKS.slice(0, 5).map(symbol => {
            const price = 50 + Math.random() * 200;
            const atr = price * 0.025;
            const breakout = price * 0.97;
            const shares = Math.floor(2000 / atr);
            
            return {
                symbol,
                price: price.toFixed(2),
                breakout: breakout.toFixed(2),
                strength: (((price - breakout) / breakout) * 100).toFixed(2),
                atr: atr.toFixed(2),
                shares,
                value: (shares * price).toFixed(0),
                stop: (price - 2 * atr).toFixed(2)
            };
        });
        
        sellData = ['JPM', 'WMT'].map(symbol => ({
            symbol,
            price: (50 + Math.random() * 150).toFixed(2),
            reason: Math.random() > 0.5 ? 'Breakout Exit' : 'Stop Loss'
        }));
    }
    
    function updateUI() {
        document.getElementById('buyCount').textContent = buyData.length;
        document.getElementById('sellCount').textContent = sellData.length;
        document.getElementById('buyBadge').textContent = buyData.length + ' segnali';
        document.getElementById('sellBadge').textContent = sellData.length + ' segnali';
        
        const buyContainer = document.getElementById('buySignals');
        buyContainer.innerHTML = buyData.map(s => `
            <div class="signal buy">
                <div class="signal-header">
                    <div class="symbol">${s.symbol}</div>
                    <div class="signal-badge buy">BUY</div>
                </div>
                <div class="detail">
                    <span class="detail-label">Prezzo</span>
                    <span class="price">$${s.price}</span>
                </div>
                <div class="detail">
                    <span class="detail-label">Breakout</span>
                    <span class="detail-value">$${s.breakout}</span>
                </div>
                <div class="detail">
                    <span class="detail-label">Forza</span>
                    <span class="detail-value green">+${s.strength}%</span>
                </div>
                <div class="detail">
                    <span class="detail-label">Posizione</span>
                    <span class="detail-value">${s.shares} azioni</span>
                </div>
                <div class="detail">
                    <span class="detail-label">Valore</span>
                    <span class="detail-value">$${parseInt(s.value).toLocaleString()}</span>
                </div>
                <div class="detail">
                    <span class="detail-label">Stop Loss</span>
                    <span class="detail-value red">$${s.stop}</span>
                </div>
            </div>
        `).join('');
        
        const sellContainer = document.getElementById('sellSignals');
        sellContainer.innerHTML = sellData.map(s => `
            <div class="signal sell">
                <div class="signal-header">
                    <div class="symbol">${s.symbol}</div>
                    <div class="signal-badge sell">SELL</div>
                </div>
                <div class="detail">
                    <span class="detail-label">Prezzo</span>
                    <span class="price">$${s.price}</span>
                </div>
                <div class="detail">
                    <span class="detail-label">Motivo</span>
                    <span class="detail-value">${s.reason}</span>
                </div>
            </div>
        `).join('');
    }
    
    function toggleAuto() {
        autoScan = !autoScan;
        if (autoScan) {
            document.getElementById('autoStatus').textContent = 'Attivo (ogni 60min)';
            toast('üîÑ Scan automatico attivato');
            scanNow();
            autoTimer = setInterval(scanNow, 60 * 60 * 1000);
        } else {
            document.getElementById('autoStatus').textContent = 'Disattivato';
            toast('‚è∏Ô∏è Scan automatico disattivato');
            if (autoTimer) clearInterval(autoTimer);
        }
    }
    
    function showInfo() {
        alert('üê¢ Turtle Trading\n\nMetodo di trend-following basato su breakout di prezzo.\n\nSistema 1: 20/10 giorni\nSistema 2: 55/20 giorni\n\nRischio: 2% per trade\nStop Loss: 2 ATR');
    }
    
    function toast(msg) {
        const t = document.getElementById('toast');
        document.getElementById('toastMsg').textContent = msg;
        t.classList.add('show');
        setTimeout(() => t.classList.remove('show'), 3000);
    }
    
    // Auto-genera dati demo all'avvio
    window.addEventListener('load', () => {
        generateSignals();
        updateUI();
    });
</script>
```

