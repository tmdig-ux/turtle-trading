<script>
    // App Logic
    let config = {
        tradingSystem: '20-10',
        capital: 100000,
        riskPercent: 2,
        autoScan: false
    };
    
    let buySignals = [];
    let sellSignals = [];
    let portfolio = [];
    let autoScanTimer = null;
    
    const STOCKS = ['AAPL', 'MSFT', 'GOOGL', 'AMZN', 'NVDA', 'META', 'TSLA', 'JPM', 'V', 'WMT'];
    
    window.addEventListener('load', () => {
        loadConfig();
        loadPortfolio();
        generateDemoData();
        updateUI();
    });
    
    function loadConfig() {
        const saved = localStorage.getItem('turtleConfig');
        if (saved) config = JSON.parse(saved);
    }
    
    function saveSettings() {
        config.tradingSystem = document.getElementById('tradingSystem').value;
        config.capital = parseFloat(document.getElementById('capital').value);
        config.riskPercent = parseFloat(document.getElementById('riskPercent').value);
        localStorage.setItem('turtleConfig', JSON.stringify(config));
        closeModal('settingsModal');
        showToast('Configurazione salvata! ‚úÖ');
    }
    
    function loadPortfolio() {
        const saved = localStorage.getItem('turtlePortfolio');
        if (saved) portfolio = JSON.parse(saved);
    }
    
    async function runScan() {
        showToast('Scansione in corso... üîç');
        await new Promise(r => setTimeout(r, 1000));
        generateDemoData();
        updateUI();
        document.getElementById('lastScan').textContent = new Date().toLocaleTimeString('it-IT', {hour: '2-digit', minute: '2-digit'});
        showToast('Scansione completata! ‚úÖ');
    }
    
    function toggleAutoScan() {
        config.autoScan = !config.autoScan;
        if (config.autoScan) {
            document.getElementById('autoScanStatus').textContent = 'Attivo (ogni 60min)';
            showToast('Scan automatico attivato üîÑ');
            runScan();
            autoScanTimer = setInterval(runScan, 60 * 60 * 1000);
        } else {
            document.getElementById('autoScanStatus').textContent = 'Disattivato';
            showToast('Scan automatico disattivato');
            if (autoScanTimer) clearInterval(autoScanTimer);
        }
    }
    
    function updateUI() {
        document.getElementById('buyCount').textContent = buySignals.length;
        document.getElementById('sellCount').textContent = sellSignals.length;
        document.getElementById('positionsCount').textContent = portfolio.length;
        document.getElementById('buyCountBadge').textContent = `${buySignals.length} segnali`;
        document.getElementById('sellCountBadge').textContent = `${sellSignals.length} segnali`;
        renderBuySignals();
        renderSellSignals();
    }
    
    function renderBuySignals() {
        const container = document.getElementById('buySignals');
        if (buySignals.length === 0) {
            container.innerHTML = '<div class="empty-state"><div class="empty-icon">üìà</div><p>Esegui una scansione</p></div>';
            return;
        }
        container.innerHTML = buySignals.map(s => `
            <div class="signal-card buy">
                <div class="signal-header">
                    <div class="symbol">${s.symbol}</div>
                    <div class="signal-badge badge-buy">BUY</div>
                </div>
                <div class="signal-details">
                    <div class="detail-row">
                        <span class="detail-label">Prezzo</span>
                        <span class="price">$${s.price.toFixed(2)}</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Breakout</span>
                        <span class="detail-value">$${s.breakoutLevel.toFixed(2)}</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Forza</span>
                        <span class="detail-value" style="color: var(--accent-green);">+${s.strength.toFixed(2)}%</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Posizione</span>
                        <span class="detail-value">${s.positionSize} azioni</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Valore</span>
                        <span class="detail-value">$${s.positionValue.toLocaleString()}</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Stop Loss</span>
                        <span class="detail-value" style="color: var(--accent-red);">$${(s.price - 2 * s.atr).toFixed(2)}</span>
                    </div>
                </div>
            </div>
        `).join('');
    }
    
    function renderSellSignals() {
        const container = document.getElementById('sellSignals');
        if (sellSignals.length === 0) {
            container.innerHTML = '<div class="empty-state"><div class="empty-icon">üìâ</div><p>Nessun segnale</p></div>';
            return;
        }
        container.innerHTML = sellSignals.map(s => `
            <div class="signal-card sell">
                <div class="signal-header">
                    <div class="symbol">${s.symbol}</div>
                    <div class="signal-badge badge-sell">SELL</div>
                </div>
                <div class="signal-details">
                    <div class="detail-row">
                        <span class="detail-label">Prezzo</span>
                        <span class="price">$${s.price.toFixed(2)}</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Motivo</span>
                        <span class="detail-value">${s.reason}</span>
                    </div>
                </div>
            </div>
        `).join('');
    }
    
    function showSettings() {
        document.getElementById('tradingSystem').value = config.tradingSystem;
        document.getElementById('capital').value = config.capital;
        document.getElementById('riskPercent').value = config.riskPercent;
        document.getElementById('settingsModal').classList.add('active');
    }
    
    function showPortfolio() {
        const container = document.getElementById('portfolioContent');
        if (portfolio.length === 0) {
            container.innerHTML = '<div class="empty-state"><div class="empty-icon">üíº</div><p>Nessuna posizione</p></div>';
        } else {
            container.innerHTML = portfolio.map(p => `
                <div class="signal-card" style="margin-bottom: 15px;">
                    <div class="signal-header">
                        <div class="symbol">${p.symbol}</div>
                        <div style="font-size: 0.9rem;">${p.shares} azioni</div>
                    </div>
                    <div class="signal-details">
                        <div class="detail-row">
                            <span class="detail-label">Entrata</span>
                            <span class="detail-value">$${p.entryPrice.toFixed(2)}</span>
                        </div>
                        <div class="detail-row">
                            <span class="detail-label">Stop Loss</span>
                            <span class="detail-value" style="color: var(--accent-red);">$${p.stopLoss.toFixed(2)}</span>
                        </div>
                    </div>
                </div>
            `).join('');
        }
        document.getElementById('portfolioModal').classList.add('active');
    }
    
    function closeModal(id) {
        document.getElementById(id).classList.remove('active');
    }
    
    function showToast(msg) {
        const toast = document.getElementById('toast');
        document.getElementById('toastMessage').textContent = msg;
        toast.classList.add('show');
        setTimeout(() => toast.classList.remove('show'), 3000);
    }
    
    function generateDemoData() {
        buySignals = STOCKS.slice(0, 5).map(symbol => {
            const price = 50 + Math.random() * 200;
            const atr = price * (0.02 + Math.random() * 0.03);
            const breakoutLevel = price * (0.95 + Math.random() * 0.03);
            const positionSize = Math.floor((config.capital * (config.riskPercent / 100)) / (2 * atr));
            return {
                symbol,
                price,
                breakoutLevel,
                strength: ((price - breakoutLevel) / breakoutLevel) * 100,
                atr,
                positionSize,
                positionValue: positionSize * price
            };
        });
        
        sellSignals = ['JPM', 'WMT'].map(symbol => ({
            symbol,
            price: 50 + Math.random() * 150,
            reason: Math.random() > 0.5 ? 'Breakout Exit' : 'Stop Loss'
        }));
        
        if (portfolio.length === 0) {
            portfolio = [
                { symbol: 'AAPL', entryPrice: 175.50, shares: 285, stopLoss: 168.60 },
                { symbol: 'MSFT', entryPrice: 420.00, shares: 119, stopLoss: 413.20 }
            ];
            localStorage.setItem('turtlePortfolio', JSON.stringify(portfolio));
        }
    }
    
    window.addEventListener('click', (e) => {
        if (e.target.classList.contains('modal')) {
            e.target.classList.remove('active');
        }
    });
</script>
