<script>
let data=[];
function scan(){
  data=[
    {s:'AAPL',p:178.50,b:175.20,a:580},
    {s:'MSFT',p:425.80,b:418.30,a:120},
    {s:'GOOGL',p:142.30,b:138.90,a:350},
    {s:'NVDA',p:505.20,b:495.10,a:100}
  ];
  show();
  document.getElementById('time').innerText=new Date().toLocaleTimeString();
  alert('‚úÖ Scansione completata!');
}
function show(){
  let html='';
  data.forEach(d=>{
    html+=`<div class="signal">
      <div class="symbol">${d.s}</div>
      <div>Prezzo: $${d.p}</div>
      <div>Breakout: $${d.b}</div>
      <div>Posizione: ${d.a} azioni</div>
    </div>`;
  });
  document.getElementById('buys').innerHTML=html;
  document.getElementById('buy').innerText=data.length;
  document.getElementById('sells').innerHTML='<div class="signal">JPM - $142.30 - Stop Loss</div>';
  document.getElementById('sell').innerText='1';
}
function auto(){
  alert('Scan automatico attivato! Scanner√† ogni ora.');
  scan();
}
</script>

